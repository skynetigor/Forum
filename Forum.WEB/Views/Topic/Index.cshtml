@using Forum.BLL.DTO.Content
@model IEnumerable<TopicDTO>
@{
    ViewBag.Title = "Go";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default category">
    <div class="panel-heading">
        <h3 class="panel-title">Категория@*@Model.FirstOrDefault().SubCategoryName*@</h3>
        <a class="btn btn-default" href=@Url.Action("Update","Topic", new { currentId = ViewBag.subCategoryId })>Новая тема</a>
    </div>
    <div class="panel-body panel-forum">
        @if (Model.Count() > 0)
            {<table class="table table-bordered table-striped stretch table-forum">
            <thead>
                <tr>
                    <td>Пользователь</td>
                    <td>Темы</td>
                    <td class="reply">Ответы</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var topic in Model)
                {
                    <tr>
                        <td>@topic.UserName</td>
                        <td><a href=@Url.Action("Index", "Comment", new { currentTopic = topic.Id})>@topic.Title</a></td>
                        <td class="reply">123</td>
                    </tr>
                }
            </tbody>
        </table>
        }
        else
        {
            <p class="empty-message">Пусто.</p>
        }
    </div>
</div>

