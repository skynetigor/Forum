@using Forum.BLL.DTO.Content
@model IEnumerable<TopicDTO>
@{
    ViewBag.Title = "Go";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default category">
    <div class="panel-heading container-fluid">
        <div style="margin:auto">
            <h3 class="panel-title">@Model.FirstOrDefault().SubCategoryName</h3>
        </div>
        <a class="btn btn-default right" href=@Url.Action("Update","Topic", new { currentId = ViewBag.subCategoryId })>Новая тема</a>
    </div>
    <div class="panel-body panel-forum">
        @if (Model.Count() > 0)
            {
            <table class="table table-bordered table-striped stretch table-forum">
            <thead>
                <tr>
                    <td>Пользователь</td>
                    <td>Темы</td>
                    <td class="reply">Ответы</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var topic in Model)
                {
                    <tr>
                        <td>@topic.UserName</td>
                        <td class="description-colum">
                        <a href=@Url.Action("Index", "Comment", new { currentTopic = topic.Id})>@topic.Title</a>
                        </td>
                        <td class="reply">@topic.AnswersCount</td>
                    </tr>
                }
            </tbody>
        </table>
        }
        else
        {
            <p class="empty-message">Пусто.</p>
        }
    </div>
</div>

