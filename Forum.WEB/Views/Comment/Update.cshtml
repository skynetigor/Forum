@model Forum.WEB.Models.ContentViewModels.CommentViewModel
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-horizontal">
    <h4>Введите сообщение</h4>
    <hr />
    <div class="form-group">
        <div class="col-md-10">
            <div id="editor">
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="hidden" name="TopicId" value="@Model.TopicId" />
        <input type="hidden" name="Id" value="@Model.Id" />
        @if (ViewBag.ReturnPageId != null)
        {
            <input type="hidden" name="returnPageId" value="@ViewBag.ReturnPageId" />
        }
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="comment-send-btn" type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </div>
</div>
